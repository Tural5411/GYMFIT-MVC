@model IEnumerable<fitnessMVC.Model.tbl_slider>
@{
    Layout = null;
}
<div id="slider">
    @foreach (var x in Model)
    {
        <div style="background:url(@x.Photo)center center; background-repeat:no-repeat; " class="col-lg-12 col-md-12 col-sm-12 slide-item active">
            <div class="container">
                <div class="context">
                    <button>@x.Header</button>
                    <hr>
                    <p>@x.Description</p>
                </div>
            </div>
        </div>
    }
    <i id="btnLeft" class="fas fa-arrow-left"></i>
    <i id="btnRight" class="fas fa-arrow-right"></i>
</div>
