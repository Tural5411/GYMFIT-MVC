@model IEnumerable<fitnessMVC.Model.tbl_mansoryPhoto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.longphoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.normalPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.longphoto)
        </td>
        <td>
            <img width="250" class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.normalPhoto)" alt="Alternate Text" />
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Header)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
